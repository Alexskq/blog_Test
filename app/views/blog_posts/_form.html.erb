<%=  form_with model: blog_post do |f| %>
  <% if f.object.errors.any? %>
    <div>
      <% f.object.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.rich_text_area :content %>
  </p>

  <p>
    <%= f.label :published_at %>
    <%= f.datetime_select :published_at, include_blank: true %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>