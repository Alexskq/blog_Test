<h1 class="text-red-500">My Blog</h1>

<% @blog_posts.each do |blog_post| %>
  <div>
    <h2><%= link_to blog_post.title, blog_post %></h2>
    <%= image_tag blog_post.cover_image, alt: "text" if blog_post.cover_image.attached? %>

    <% if blog_post.draft? %>
      <div class="p-2 rounded bg-gray-400">Draft</div>
    <% elsif blog_post.scheduled? %>
      <div class="p-2 rounded bg-gray-400">
        <p class='text-red-400'>Scheduled</p>
      </div>
    <% end %>

    <p><%= blog_post.content %></p>
    <p><%= blog_post.published_at %></p>

  </div>
<% end %>

<div class="my-16">
  <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>
