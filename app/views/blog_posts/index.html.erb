<h1>My Blog</h1>

<% @blog_posts.each do |blog_post| %>
  <div>
    <% if blog_post.draft? %>
      <div class="p-2 rounded bg-gray-400 text-red-600">Draft</div>
    <% elsif blog_post.schedule? %>
      <div class="p-2 rounded bg-gray-400 text-green-600">Scheduled</div>
    <% end %>
    <h2><%= link_to blog_post.title, blog_post %></h2>

    <p><%= blog_post.body %></p>

  </div>
<% end %>